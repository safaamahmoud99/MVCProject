@model IEnumerable<BL.ViewModel.ProductViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">

    <div class="col-lg-3">

        <form class="d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0 ff" method="get" action="/Home/Search">
            <div class="input-group">
                <input class="form-control" name="proName" type="text" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2" />
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </div>
        </form>

        <h1 class="my-4">Ecommerce</h1>
        <div class="list-group">
            @foreach (var category in ViewBag.categories)
            {
                <a href="/home/GetProductsByCategory/@category.Id" class="list-group-item">@category.Name</a>
            }
        </div>

    </div>
    <!-- /.col-lg-3 -->

    <div class="col-lg-9">

        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block img-fluid" src="~/Content/Resources/images/1.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="~/Content/Resources/images/2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="~/Content/Resources/images/3.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="/Home/Product/@item.Id"><img class="card-img-top" src="~/Content/Resources/images/@item.Image" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="/Home/Product/@item.Id">@item.Name</a>
                            </h4>
                            <h5>$@item.Price</h5>
                        </div>
                    </div>
                </div>
            }

        </div>
        <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

</div>
<!-- /.row -->