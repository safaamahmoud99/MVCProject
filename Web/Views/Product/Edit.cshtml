@model BL.ViewModel.ProductViewModel

@{
    Layout = "_AdminLayout.cshtml";
    ViewBag.Title = "Edit";
    SelectList catList = new SelectList(ViewBag.categories, "ID", "Name", Model);
}

<h2>Edit Product</h2>

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

